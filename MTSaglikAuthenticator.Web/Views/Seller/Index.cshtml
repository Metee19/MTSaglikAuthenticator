@model IEnumerable<MTSaglikAuthenticator.Entities.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="page-content">
    <div class="page-header">
        <h2>Customer List</h2>
    </div><!-- /.page-header -->
    <br />
    <br />
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <table id="simple-table" class="table  table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name-Surname</th>
                                <th>Type</th>
                                <th>Institution Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Country Code</th>
                                <th>Longtitude</th>
                                <th>Lottitude</th>
                                <th>State</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Institution.Title.TitleName</td>
                    <td>@item.Institution.CompanyName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.CountryCode</td>
                    <td>@item.Longtitude</td>
                    <td>@item.Lottitude</td>
                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <a class="btn btn-xs btn-info" asp-controller="Home" asp-route-id="@item.Id" asp-action="Edit">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </a>

                            @*  <button class="btn btn-xs btn-danger">
                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </button>*@
                            <a class="btn btn-xs btn-danger" onclick="removeItem(@item.Phone)" data-id="@item.Phone">
                                <i class="ace-icon fa fa-trash bigger-120"></i>
                            </a>
                        </div>
                    </td>

                </tr>
}
                        </tbody>
                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">function removeItem(phoneNumber) {

            swal({
                title: 'Silmek istediğinize emin misiniz?',
                text: 'Silinen veri geri alınamaz',
                icon: 'warning',
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: "/Home/Delete/",
                        data: { 'phoneNumber': phoneNumber },
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);

                            } else {
                                toastr.error(data.message);
                            }
                            location.reload();
                        }
                    });
                }
            });
        }

         //$(document).ready(function (){
        //$("#btnRemove").on("click", function () {
        //    var id = $("#btnRemove").data("id");</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
