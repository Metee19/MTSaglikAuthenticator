@using MTSaglikAuthenticator.Entities.ViewModels;
@model LoginViewModel

@{ ViewData["Title"] = "Login";
    Layout = null; }

<div class="row">
    <div class="col-md-4 offset-md-4">
        <BR /><BR /><BR /><BR /><BR />
        <h3>Giriş ve Doğrulama Ekranı</h3>

        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" type="tel" id="phone" name="phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="RememberMe"  /> Remember Me
            </div>
            <div class="form-group">
                <input type="submit" value="Doğrula" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
