@model MTSaglikAuthenticator.Entities.ViewModels.InstitutionViewModel

@{
    ViewData["Title"] = "InstitutionCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<form asp-action="InstitutionCreate" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="CompanyName">Company Name: </label>
        <div class="col-sm-4">
            <input asp-for="CompanyName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Type">Type: </label>
        <div class="col-sm-4">
            @Html.DropDownListFor(l => l.Type, new SelectList(ViewBag.Titles.Data, "Id", "TitleName"), new { @class = "form-control col-sm-12" })
        </div>
    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Create" class="btn btn-info col-xs-3" />
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
